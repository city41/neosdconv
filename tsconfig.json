{
    "include": ["./src/**/*"],
    "compilerOptions": {
        "outDir": "./lib",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "target": "es2017",
        "module": "commonjs",
        "lib": ["dom", "es2017", "es6", "es7"],
        "allowJs": false,
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    }
}
